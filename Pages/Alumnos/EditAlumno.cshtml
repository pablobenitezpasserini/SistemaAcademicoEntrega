@page
@model SistemaAcademico.Pages.Alumnos.EditAlumnoModel
@{
}
<form method="post">

	<input type="hidden" asp-for="oAlumno.Id">

	<div class="form-group">
		<label asp-for="oAlumno.Nombre"></label>
		<input asp-for="oAlumno.Nombre" class="form-control" />
		<span asp-validation-for="oAlumno.Nombre" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="oAlumno.Apellido"></label>
		<input asp-for="oAlumno.Apellido" class="form-control" />
		<span asp-validation-for="oAlumno.Apellido" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="oAlumno.Dni"></label>
		<input type="number" asp-for="oAlumno.Dni" class="form-control" />
		<span asp-validation-for="oAlumno.Dni" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="oAlumno.Email"></label>
		<input type="email" asp-for="oAlumno.Email" class="form-control" />
		<span asp-validation-for="oAlumno.Email" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="oAlumno.FechaNacimiento"></label>
		<input type="date" asp-for="oAlumno.FechaNacimiento" class="form-control" />
		<span asp-validation-for="oAlumno.FechaNacimiento" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Guardar</button>

</form>
